.newfrom {
  height: 100%;
  background: #f2f2f2;
  overflow: hidden;
}
.new_demo {
  width: 100%;
  height: 100%;
}
.new_list {
  width: 750rpx;
  height: 450rpx;
  background: #fff;
  padding-top: 48rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background: white;
  overflow: hidden;
  position: relative;
  margin-top: 20rpx;
}
.new_logo {
  width: 750rpx;
  overflow: hidden;
}
.new_logo image {
  width: 38rpx;
  height: 38rpx;
  margin-left: 20rpx;
  float: left;
}
.new_logo text {
  font-size: 36rpx;
  float: left;
  margin-left: 16rpx;
}
.new_text {
  width: 750rpx;
  position: absolute;
  top: 134rpx;
  left: 20rpx;
  overflow: hidden;
}
.new_img {
  width: 180rpx;
  height: 180rpx;
  -webkit-border-radius: 8px;
          border-radius: 8px;
  overflow: hidden;
  float: left;
}
.new_img image {
  display: block;
  width: 180rpx;
  height: 180rpx;
}
.new_btn {
  position: absolute;
  top: 334rpx;
  left: 339rpx;
  overflow: hidden;
}
.new_btn text {
  display: block;
  width: 180rpx;
  height: 68rpx;
  float: left;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  line-height: 68rpx;
  -webkit-border-radius: 34rpx;
          border-radius: 34rpx;
}
.new_btn text:nth-of-type(1) {
  border: 1px solid #999999;
  color: #999999;
}
.new_btn text:nth-of-type(2) {
  background: #F9C923;
  color: #191919;
  margin-left: 30rpx;
}
.new_mid text {
  display: block;
  font-size: 28rpx;
  margin-top: 14rpx;
  color: #191919;
}
.new_mid {
  float: left;
  margin-left: 18rpx;
}
.new_mid view {
  font-size: 26rpx;
  color: #999999;
}
.new_mid view:nth-of-type(1) {
  margin-top: 5rpx;
}
.new_mid view:nth-of-type(2),
.new_mid view:nth-of-type(3) {
  margin-top: 14rpx;
}

