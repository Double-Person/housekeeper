.from_artisan {
  width: 750rpx;
  height: 1206rpx;
  position: relative;
}
.artisan {
  width: 676rpx;
  height: 128rpx;
  border: 1rpx solid #ffd5a3;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  margin: 15rpx auto;
  padding: 24rpx 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.art_logo {
  width: 80rpx;
  height: 80rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  float: left;
  overflow: hidden;
}
.art_logo image {
  width: 100%;
  height: 100%;
}
.art_name {
  float: left;
  margin-left: 22rpx;
}
.art_name text:nth-of-type(1) {
  display: block;
  font-size: 32rpx;
  color: #333;
}
.art_name text:nth-of-type(2) {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 48rpx;
}
.look_txt {
  width: 130rpx;
  height: 46rpx;
  font-size: 26rpx;
  color: #FFC00C;
  float: right;
  border: 1px solid #FFC00C;
  text-align: center;
  line-height: 46rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin-top: 16rpx;
}
.from_enter {
  width: 715rpx;
  height: 91rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  background: #F9C923;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 91rpx;
  position: absolute;
  bottom: 32rpx;
  left: 18rpx;
}

